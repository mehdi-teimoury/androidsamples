<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/android_app_with_kotlin_by_mehdi2316"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <EditText
        android:id="@+id/ed_input"
        android:layout_width="150sp"
        android:layout_height="40sp"
        android:text=""
        android:hint="Enter Text"
        android:textColorHint="@color/purple_500"
        android:outlineAmbientShadowColor="@color/purple_500"
        android:shadowColor="@color/purple_500"
        app:layout_constraintEnd_toStartOf="@id/bt_showText"
        app:layout_constraintHorizontal_bias="0.317"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"

    />
    <Button
        android:id="@+id/bt_showText"
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:layout_marginTop="4dp"
        android:text="show Text"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ed_input"
        app:layout_constraintTop_toTopOf="@id/ed_input" />
    <TextView
        android:id="@+id/txt_showed_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text=""
        android:gravity="center"
        android:textColor="@color/teal_700"
        app:layout_constraintTop_toBottomOf="@id/bt_showText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />
    <Button
        android:id="@+id/bt_gotoPage2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go To Page 2"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>